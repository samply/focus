// Return a list of all Hospitals.
define HospitalList:
    if InInitialPopulation then 
        [CareTeam] O 
            where StartsWith(O.name,'Hospital')
    else 
        {} as List<CareTeam>

// Return the ID for the given hospital CareTeam
define function HospitalId(careTeam FHIR.CareTeam):
    SensibleString(careTeam.id)

// Check to see if there are any CareTeam resources with the
// given ID and names that start with "Hospital"
define function ExistsHospitalId(id_var String):
    exists from [CareTeam] O
        where HospitalId(O) = id_var
        and StartsWith(O.name,'Hospital')
